<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight"
    android:divider="?android:dividerVertical"
    android:dividerPadding="8dp"
    android:showDividers="middle">
    <RelativeLayout
        android:id="@+id/primary_target"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="?android:listPreferredItemPaddingLeft"
        android:paddingRight="?android:listPreferredItemPaddingRight"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:background="?android:selectableItemBackground">
        <TextView
            style="?android:textAppearanceListItemSmall"
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:textSize="20sp"
            android:text="Current Account" />
        <TextView
            style="?android:textAppearanceSmall"
            android:id="@+id/ibanTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textSize="12sp"
            android:textColor="#ffbebebe"
            android:text="BE09 1231 2345 6712" />
        <TextView
            style="?android:textAppearanceSmall"
            android:id="@+id/ownerTxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="34dp"
            android:textSize="10sp"
            android:textColor="#ffbebebe"
            android:text="The owner has a very long name" />
        <TextView
            style="?android:textAppearanceSmall"
            android:id="@+id/amountTxt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingTop="34dp"
            android:textSize="10sp"
            android:text="â‚¬9.120.645,25"
            android:textColor="#ffb3c833"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/optionsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_account_options" />
    </RelativeLayout>
</LinearLayout>